<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="backButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/add_ic_shape</item>
        <item name="android:contentDescription">@string/back</item>
    </style>

    <style name="button_land">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/add_ic_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>